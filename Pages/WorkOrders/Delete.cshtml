@page "{id:int}"
@model ManagementApp.Pages.WorkOrders.DeleteModel

@{
    ViewData["Title"] = "Delete Work Order";
}

<h1>Delete Work Order</h1>

<form method="post">
    <div class="form-group">
        <label>Are you sure you want to delete this work order?</label>
        <p>
            Title: @Model.WorkOrder.Title<br />
            Description: @Model.WorkOrder.Description<br />
            <!-- Add other details here -->
        </p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
