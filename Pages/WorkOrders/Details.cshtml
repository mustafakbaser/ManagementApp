@page "{id:int}"
@model ManagementApp.Pages.WorkOrders.DetailsModel

@{
    ViewData["Title"] = "Work Order Details";
}

<h1>Work Order Details</h1>

<div class="card">
    <div class="card-header">
        <h2>@Model.WorkOrder.Title</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.WorkOrder.Description</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.WorkOrder.Status</dd>

            <dt class="col-sm-3">Assigner</dt>
            <dd class="col-sm-9">@Model.WorkOrder.Assigner</dd>

            <dt class="col-sm-3">Assigned To</dt>
            <dd class="col-sm-9">@Model.WorkOrder.AssignedTo</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.WorkOrder.CreatedDate.ToString("MM/dd/yyyy")</dd>

            <dt class="col-sm-3">Last Updated Date</dt>
            <dd class="col-sm-9">@Model.WorkOrder.LastUpdatedDate.ToString("MM/dd/yyyy")</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-page="./Edit" asp-route-id="@Model.WorkOrder.Id" class="btn btn-warning">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
