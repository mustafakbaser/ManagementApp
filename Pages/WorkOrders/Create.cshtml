@page
@model ManagementApp.Pages.WorkOrders.CreateModel
@{
    ViewData["Title"] = "Create Work Order";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="WorkOrder.Title" class="control-label"></label>
            <input asp-for="WorkOrder.Title" class="form-control" />
            <span asp-validation-for="WorkOrder.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkOrder.Description" class="control-label"></label>
            <textarea asp-for="WorkOrder.Description" class="form-control"></textarea>
            <span asp-validation-for="WorkOrder.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkOrder.Status" class="control-label"></label>
            <input asp-for="WorkOrder.Status" class="form-control" />
            <span asp-validation-for="WorkOrder.Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkOrder.Assigner" class="control-label"></label>
            <input asp-for="WorkOrder.Assigner" class="form-control" />
            <span asp-validation-for="WorkOrder.Assigner" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkOrder.AssignedTo" class="control-label">Assigned To</label>
            <input asp-for="WorkOrder.AssignedTo" class="form-control" />
            <span asp-validation-for="WorkOrder.AssignedTo" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="WorkOrder.CreatedDate" />
        <input type="hidden" asp-for="WorkOrder.LastUpdatedDate" />
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
